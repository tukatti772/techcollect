<p class="topfont2">ユーザー情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: {confirm: "この内容でユーザー情報を変更しますか？"},
 html: { method: :put }) do |f| %>
  <%= devise_error_messages %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :job %><br />
    <%= f.text_field :job, autofocus: true, autocomplete: "job" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, style: "width: 100%; height: 100px;", autocomplete: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>
  
  <div class="field">
    新しい<%= f.label :password %>（最低6文字)<br>
    (変更する場合のみ入力)<br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    新しい<%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> (必須)<br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録内容を更新" %>
  </div>
<% end %>

<div style="text-align: center; margin-top: 10%;">
<%= link_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会しますか？" },method: :delete %>
</div>


